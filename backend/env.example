# QIC Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
USE_SUPABASE=true

# ============================================================================
# AI SERVICES (OpenAI GPT-5 Nano)
# ============================================================================
AI_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5-nano
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=your_jwt_secret_32_chars_minimum_here
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGIN=http://localhost:8080,http://localhost:5173

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=3001
NODE_ENV=development

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# Legacy Lovable.dev (fallback)
# LOVABLE_API_KEY=your_lovable_api_key_here

# ============================================================================
# PRODUCTION NOTES
# ============================================================================
# For production deployment:
# 1. Set NODE_ENV=production
# 2. Use strong, unique JWT_SECRET and ENCRYPTION_KEY
# 3. Update CORS_ORIGIN to your production domains
# 4. Set LOG_LEVEL=warn or error for production
# 5. Ensure all external service keys are properly configured
# 6. Never commit .env to version control