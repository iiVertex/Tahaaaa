# QIC Gamified Insurance App - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================
# Backend API URL (for API calls)
VITE_BACKEND_URL=http://localhost:3001

# ============================================================================
# SUPABASE CONFIGURATION (Optional - MVP uses mock data)
# ============================================================================
# Supabase project URL (get from your Supabase dashboard)
# VITE_SUPABASE_URL=your_supabase_url_here

# Supabase anonymous key (get from your Supabase dashboard)
# VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (for server-side operations)
# VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================================================
# AUTHENTICATION (Optional - MVP uses session-based auth)
# ============================================================================
# Clerk publishable key
# VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Clerk secret key (for server-side operations)
# VITE_CLERK_SECRET_KEY=your_clerk_secret_key_here

# ============================================================================
# AI INTEGRATION (Optional - MVP uses mock AI)
# ============================================================================
# Lovable.dev API key for AI features
# VITE_LOVABLE_API_KEY=your_lovable_api_key_here

# Lovable.dev API endpoint
# VITE_LOVABLE_API_ENDPOINT=https://api.lovable.dev/v1/

# OpenAI API key (alternative to Lovable.dev)
# VITE_OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key (alternative to Lovable.dev)
# VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# APP CONFIGURATION
# ============================================================================
# App environment (development, staging, production)
VITE_APP_ENV=development

# App version
VITE_APP_VERSION=1.0.0

# App name
VITE_APP_NAME=QIC Gamified Insurance

# App description
VITE_APP_DESCRIPTION=AI-powered gamified insurance app for QIC

# ============================================================================
# FEATURE FLAGS (MVP Settings)
# ============================================================================
# Enable/disable AI features (MVP uses mock AI)
VITE_ENABLE_AI_FEATURES=true

# Enable/disable social features
VITE_ENABLE_SOCIAL_FEATURES=true

# Enable/disable collaborative missions
VITE_ENABLE_COLLABORATIVE_MISSIONS=true

# Enable/disable scenario simulations
VITE_ENABLE_SCENARIO_SIMULATIONS=true

# Enable/disable real-time notifications
VITE_ENABLE_REAL_TIME_NOTIFICATIONS=false

# ============================================================================
# ANALYTICS & MONITORING (Optional)
# ============================================================================
# PostHog API key (for analytics)
# VITE_POSTHOG_API_KEY=your_posthog_api_key_here

# PostHog host
# VITE_POSTHOG_HOST=https://app.posthog.com

# Sentry DSN (for error tracking)
# VITE_SENTRY_DSN=your_sentry_dsn_here

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# Google Maps API key (for location-based features)
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Stripe API key (for payments)
# VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Twilio API key (for SMS notifications)
# VITE_TWILIO_API_KEY=your_twilio_api_key_here

# ============================================================================
# DEVELOPMENT SETTINGS (MVP Configuration)
# ============================================================================
# Enable debug mode
VITE_DEBUG_MODE=false

# Enable mock data (MVP uses mock data)
VITE_USE_MOCK_DATA=true

# Enable development tools
VITE_ENABLE_DEV_TOOLS=true

# API base URL (matches backend port)
VITE_API_BASE_URL=http://localhost:3001/api

# ============================================================================
# SECURITY SETTINGS (Optional - MVP uses session-based auth)
# ============================================================================
# JWT secret for token signing
# VITE_JWT_SECRET=your_jwt_secret_here

# Encryption key for sensitive data
# VITE_ENCRYPTION_KEY=your_encryption_key_here

# CORS allowed origins
VITE_CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:4173,http://localhost:4174,http://localhost:4175,http://localhost:4176

# ============================================================================
# NOTIFICATION SETTINGS (Optional - MVP disabled)
# ============================================================================
# Firebase Cloud Messaging (FCM) key
# VITE_FCM_SERVER_KEY=your_fcm_server_key_here

# Web Push VAPID keys
# VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
# VITE_VAPID_PRIVATE_KEY=your_vapid_private_key_here

# ============================================================================
# FILE STORAGE (Optional - MVP uses mock data)
# ============================================================================
# AWS S3 bucket name
# VITE_AWS_S3_BUCKET=your_s3_bucket_name

# AWS S3 region
# VITE_AWS_S3_REGION=us-east-1

# AWS S3 access key
# VITE_AWS_S3_ACCESS_KEY=your_aws_access_key

# AWS S3 secret key
# VITE_AWS_S3_SECRET_KEY=your_aws_secret_key

# ============================================================================
# INTERNATIONALIZATION (MVP Settings)
# ============================================================================
# Default language
VITE_DEFAULT_LANGUAGE=en

# Supported languages (MVP supports English and Arabic)
VITE_SUPPORTED_LANGUAGES=en,ar

# Enable RTL support
VITE_ENABLE_RTL_SUPPORT=true

# ============================================================================
# THEME SETTINGS (QIC Brand Colors)
# ============================================================================
# Default theme
VITE_DEFAULT_THEME=light

# Enable theme switching
VITE_ENABLE_THEME_SWITCHING=true

# ============================================================================
# GAMIFICATION SETTINGS (MVP Configuration)
# ============================================================================
# XP per level
VITE_XP_PER_LEVEL=100

# Maximum LifeScore
VITE_MAX_LIFESCORE=1000

# Maximum streak days
VITE_MAX_STREAK_DAYS=365

# ============================================================================
# RATE LIMITING (MVP Settings)
# ============================================================================
# API rate limit (requests per minute)
VITE_API_RATE_LIMIT=100

# AI request rate limit (requests per minute)
VITE_AI_RATE_LIMIT=10

# ============================================================================
# CACHING (Optional)
# ============================================================================
# Cache TTL in seconds
VITE_CACHE_TTL=3600

# Enable Redis caching (MVP disabled)
VITE_ENABLE_REDIS_CACHE=false

# Redis URL
# VITE_REDIS_URL=redis://localhost:6379

# ============================================================================
# LOGGING (MVP Settings)
# ============================================================================
# Log level (debug, info, warn, error)
VITE_LOG_LEVEL=info

# Enable console logging
VITE_ENABLE_CONSOLE_LOGGING=true

# Enable file logging (MVP disabled)
VITE_ENABLE_FILE_LOGGING=false

# ============================================================================
# TESTING (MVP Settings)
# ============================================================================
# Enable test mode
VITE_TEST_MODE=false

# Test user ID
VITE_TEST_USER_ID=test_user_123

# Mock API responses (MVP uses mock data)
VITE_MOCK_API_RESPONSES=true

# ============================================================================
# DEPLOYMENT (Optional)
# ============================================================================
# Build environment
VITE_BUILD_ENV=development

# CDN URL
# VITE_CDN_URL=https://cdn.yourdomain.com

# Static assets URL
# VITE_STATIC_ASSETS_URL=https://assets.yourdomain.com

# ============================================================================
# MVP SETUP INSTRUCTIONS
# ============================================================================
# 1. Copy this file to .env
# 2. The MVP works with default values - no external services required
# 3. Only uncomment variables if you want to integrate external services
# 4. Never commit .env to version control
# 5. Restart your development server after changing environment variables

# ============================================================================
# QUICK START (MVP)
# ============================================================================
# 1. Backend: cd backend && npm run dev
# 2. Frontend: npm run dev
# 3. Open: http://localhost:8080
# 4. All features work with mock data - no external setup needed!

# ============================================================================
# SECURITY NOTES
# ============================================================================
# - Never commit .env files to version control
# - MVP uses session-based auth (no external auth required)
# - All external services are optional and commented out
# - Mock data is used for all features in MVP mode
